{
  "name": "markdownlang",
  "version": "1.0.0",
  "description": "A programming language using markdown syntax",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "markdownlang": "src/index.ts"
  },
  "scripts": {
    "start": "node --experimental-transform-types src/index.ts",
    "test": "node --experimental-transform-types --test tests/*.test.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=mdl --banner:js='#!/usr/bin/env node'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "jsep": "^1.3.8",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.4"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "@types/node": "^25.2.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
